<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".AcercaDeActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25dp"
                android:text="Acerca de"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card"
                style="@style/AppTheme.CardView"
                app:cardCornerRadius="24dp"
                android:layout_marginBottom="30dp"
                android:layout_below="@+id/title">

                <RelativeLayout
                    android:id="@+id/linearLayoutCardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/contenedor1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/whiterect"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:gravity="right">

                        <Button
                            android:id="@+id/btncancelar"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="x"
                            android:textColor="@color/white"
                            app:backgroundTint="@color/morado"
                            android:textAllCaps="false"
                            android:textSize="20dp"
                            android:background="@drawable/stylo_border_mix"/>


                        <LinearLayout
                            android:id="@+id/continfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceHeadline6"
                                android:gravity="center_horizontal"
                                android:text="Estetica Canina Sandy"
                                android:textColor="@color/purple_700"
                                android:textSize="18dp"
                                android:justificationMode="inter_word"/>
                            <ImageView
                                android:id="@+id/imglogo"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center"
                                android:background="@drawable/logo_whitebackground" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="•Estamos ubicados en el colomo , Manzanillo, Mexico"
                                android:textColor="@android:color/black"
                                android:layout_marginBottom="10dp"
                                android:textSize="14dp"
                                android:justificationMode="inter_word"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:text="• Nuestro numero de telefono es: 314 104 8906"
                                android:textColor="@android:color/black"
                                android:layout_marginBottom="10dp"
                                android:textSize="14dp"
                                android:justificationMode="inter_word"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:text="•Siguennos en facebook, estamos como ´Estética canina Sandy´"
                                android:textColor="@android:color/black"
                                android:layout_marginBottom="25dp"
                                android:textSize="14dp"
                                android:justificationMode="inter_word"/>



                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
