<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E5E7EB"
    tools:context=".CalenderFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/contenedor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtmiscitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="MIS CITAS"
            android:padding="16dp"
            android:textAlignment="center"
            android:textSize="25dp" />

        <LinearLayout
            android:id="@+id/contenedor2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/contenedor"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/stylo_border_rect"
            android:backgroundTint="@color/whiterect"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/contenedor4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/contenedor3"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <!---https://www.develou.com/android-listas-adaptadores/#Anadir_ListView_al_layout-->
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <FrameLayout

                        android:id="@+id/lista"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        tools:context="com.herprogramacion.crmleads.LeadsFragment">

                        <ListView
                            android:id="@+id/contenedor_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@null" />


                    </FrameLayout>
                </ScrollView>

                <LinearLayout
                    android:id="@+id/contenedor5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="@color/whiterect"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                        <Button
                        android:id="@+id/btnreporte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentBottom="true"
                        android:backgroundTint="@color/morado"
                        app:cornerRadius="24dp"
                        android:text="Generar Reporte" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>