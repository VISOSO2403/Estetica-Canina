<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E5E7EB"
    tools:context=".CalenderFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/contenedor"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtmiscitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25dp"
            android:text="Mis citas" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            style="@style/AppTheme.CardView"
            app:cardCornerRadius="12dp"
            android:layout_below="@+id/title_servicio">

            <ScrollView
                android:id="@+id/contenedor2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/contenedor"
                android:backgroundTint="@color/whiterect"
                android:scrollbars="none"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/contenedor4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/contenedor3"
                    android:orientation="vertical">

                    <!---https://www.develou.com/android-listas-adaptadores/#Anadir_ListView_al_layout-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <FrameLayout

                            android:id="@+id/lista"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:context="com.herprogramacion.crmleads.LeadsFragment">

                            <ListView
                                android:id="@+id/contenedor_list"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:divider="@null" />


                        </FrameLayout>
                    </LinearLayout>


                </LinearLayout>


            </ScrollView>

        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:id="@+id/contenedor5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="bottom">

            <Button
                android:id="@+id/btnreporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:backgroundTint="@color/morado"
                app:cornerRadius="24dp"
                android:text="Generar Reporte" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
