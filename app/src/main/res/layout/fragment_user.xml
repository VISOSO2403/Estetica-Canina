<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fondo"
    tools:context=".UserFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card"
                style="@style/AppTheme.CardView">

                <RelativeLayout
                    android:id="@+id/linearLayoutCardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/contenedor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/whiterect"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/person_icon" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/txtNomUsu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Nombre de usuario"
                                android:textSize="24dp"
                                android:textAppearance="?attr/textAppearanceHeadline6" />

                            <TextView
                                android:id="@+id/txtNumUsu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:text="Número de celular"
                                android:textSize="20dp"/>

                            <Button
                                android:id="@+id/btnEditPerf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                style="?attr/materialButtonOutlinedStyle"
                                app:strokeColor="@color/morado"
                                app:cornerRadius="24dp"
                                android:text="Editar perfil" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/txtNomServ"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:text="Mascotas"
                                android:textSize="20dp"
                                android:textAppearance="?attr/textAppearanceHeadline6" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/btnAgrMasc"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="25dp"
                                android:backgroundTint="@color/morado"
                                app:cornerRadius="12dp"
                                android:text="+"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Agregar mascota"
                                android:textSize="14dp"/>
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contenedor"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical"
                        android:padding="5dp">>

                        <Button
                            android:id="@+id/btnAcerDe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            style="?attr/materialButtonOutlinedStyle"
                            app:strokeColor="@color/morado"
                            app:cornerRadius="24dp"
                            android:text="Acerca de"
                            android:textColor="@color/morado"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/btnPriPoli"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            style="?attr/materialButtonOutlinedStyle"
                            app:strokeColor="@color/morado"
                            app:cornerRadius="24dp"
                            android:text="Privacidad y políticas"
                            android:textColor="@color/morado"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/btnCerrarSesion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            style="?attr/materialButtonOutlinedStyle"
                            app:strokeColor="@color/morado"
                            app:cornerRadius="24dp"
                            android:text="Cerrar sesión"
                            android:textColor="@color/morado"
                            android:textSize="16dp" />
                    </LinearLayout>


                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>